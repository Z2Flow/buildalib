<%= form_for :password, url: passwords_path, html: { class: "my-8 p-5 space-y-6 bg-white rounded-md text-purple" } do |f| %>
  <h2 class="mt-3 text-center text-3xl font-extrabold">
    Reset your password
  </h2>

  <div class="text-center">
    <span class="text-sm">Enter your email and we'll send you a link to reset your password.</span>
  </div>

  <div class="rounded-md shadow-sm -space-y-px">
    <div>
      <%= f.text_field :email, type: :email, autocomplete: :email, required: true, class: 'appearance-none rounded-none   relative block w-full px-3 py-2 my-5 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', placeholder: 'Email Address' %>
    </div>
  </div>

  <div>
    <%= f.submit "Send password reset email", class: "group relative w-full flex justify-center my-5 py-2 px-4 border border-transparent cursor-pointer text-sm font-medium rounded-md text-white bg-purple hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>

  <div class="text-sm text-center">
    <span class="text-sm">Don't have an account ?</span>
    <%= link_to "Sign up", new_sign_up_path, class: "font-medium hover:text-indigo-500" %>
  </div>
<% end %>
